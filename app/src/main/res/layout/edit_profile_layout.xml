<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="1600dp"
    android:minWidth="900dp"
    android:background="@drawable/shape_4corners_layout">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_gravity="center">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_height="120dp"
                android:layout_width="120dp"
                app:cardCornerRadius="60dp"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_user"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/ic_camera_icon_6"
                    android:onClick="btnChangeAvatar_onClick"/>
            </androidx.cardview.widget.CardView>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Name"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"/>
        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="24dp"
            android:layout_gravity="center"
            android:id="@+id/buttonEditName"
            android:background="@drawable/ic_baseline_edit_24"
            android:onClick="onClick_changeData"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1"
        android:enabled="false"
        android:id="@+id/editTextName"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Password"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"/>
        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="24dp"
            android:layout_gravity="center"
            android:id="@+id/buttonEditPassword"
            android:background="@drawable/ic_baseline_edit_24"
            android:onClick="onClick_changeData"/>
    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="********"
        android:enabled="false"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/editTextPassword"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Email"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"/>
        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="24dp"
            android:layout_gravity="center"
            android:id="@+id/buttonEditMail"
            android:background="@drawable/ic_baseline_edit_24"
            android:onClick="onClick_changeData"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/editTextEmail"
        android:enabled="false"/>

</LinearLayout>
