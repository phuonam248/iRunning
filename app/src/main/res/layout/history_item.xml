<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:text="Thu, 12/5/2020"
        android:textColor="#FF6700"
        android:textStyle="bold"
        android:textSize="20dp"
        android:paddingLeft="30dp"
        android:id="@+id/hisDateTextView"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="130dp"
        android:background="@drawable/history_round_corner">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="RUNNING"
                android:paddingLeft="50dp"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:text="1 km"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingLeft="50dp"
                android:id="@+id/hisDistanceTextView"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:text="00:11:25"
                android:textSize="25dp"
                android:textStyle="bold"
                android:paddingLeft="50dp"
                android:id="@+id/hisDurationTextView"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="SCORE"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:text="300"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingLeft="20dp"
                    android:id="@+id/hisScoreTextView"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="CALORIES"
                android:paddingLeft="20dp"
                android:paddingTop="6dp"
                android:textSize="18dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="10.08 KCAL"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingLeft="20dp"
                android:id="@+id/hisCaloriesTextView"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>