<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="900dp"
    android:minHeight="1700dp"
    android:background="@drawable/shape_meal_info_layout"
    android:backgroundTint="@color/colorWhite">
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewMeal"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:elevation="5dp"
            android:layout_marginVertical="20dp"
            android:background="@android:color/transparent"
            app:cardBackgroundColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="125dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imgVMeal"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <TextView
        android:id="@+id/textViewMeal"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Meal Name"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:textColor="@color/colorBurntOrange"
        android:gravity="center" />

    <Button
        android:id="@+id/buttonYoutube"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="50dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/shape_4corners_layout"
        android:backgroundTint="@color/colorOrangeLight5"
        android:elevation="5dp"
        android:onClick="btnIntentToYoutube_onClick"
        android:padding="10dp"
        android:text="How It Made!!"
        android:textAllCaps="false"
        android:textColor="@color/colorOrange" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="20dp"
        android:text="THÀNH PHẦN"
        android:textColor="@color/colorBurntOrange"
        android:gravity="center"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/listViewIngredient"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"/>


</LinearLayout>