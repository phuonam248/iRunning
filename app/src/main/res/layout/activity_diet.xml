<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".Activity.DietActivity">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="372dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:paddingTop="2dp"
        android:columnCount="6"
        android:rowCount="1"
        android:orientation="horizontal"
        android:id="@+id/rclVDayOfWeek"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:paddingHorizontal="40dp"
                android:gravity="bottom"
                android:text="Breakfast"
                android:textSize="25sp" />
            <Button
                android:id="@+id/buttonFindFood0"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:background="@drawable/ic_baseline_add_circle_outline_24"
                android:backgroundTint="@color/colorOrange"
                android:onClick="btnFindFood_onClick" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="20dp"
            android:elevation="10dp">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:id="@+id/rclVBreakfast"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:paddingHorizontal="40dp"
                android:gravity="bottom"
                android:text="Lunch"
                android:textSize="25sp" />
            <Button
                android:id="@+id/buttonFindFood1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:background="@drawable/ic_baseline_add_circle_outline_24"
                android:backgroundTint="@color/colorOrange"
                android:onClick="btnFindFood_onClick" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="20dp"
            android:elevation="20dp">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:id="@+id/rclVLunch"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:paddingHorizontal="40dp"
                android:gravity="bottom"
                android:text="Dinner"
                android:textSize="25sp" />
            <Button
                android:id="@+id/buttonFindFood2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:background="@drawable/ic_baseline_add_circle_outline_24"
                android:backgroundTint="@color/colorOrange"
                android:onClick="btnFindFood_onClick" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="3"
            android:elevation="20dp"
            app:cardCornerRadius="20dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rclVDinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <include
            layout="@layout/bottom_navigation_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"/>
    </LinearLayout>
</LinearLayout>